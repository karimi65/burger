<div class="container">
    <div class="row">

        <div class="col-md-6 container">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span>{{this.id}} - {{this.burger_name}}</span>
                <button type="button" class="btn" data-id="{{this.id}}"
                    data-newDevoured="{{this.devoured}}"><span>Devour it!</span></button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 container">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span> {{this.id}} - {{this.burger_name}} </span>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>