<div class="container">
    <h1>Eat Da Burger!</h1>
    <hr>
    <hr>
    <div class="row">

        <div class="col-md-4 container">
            <ul>
                {{#each burger}}
                {{#unless devoured}}

                <button class="newBurger" id="{{id}}">Devour it!</button>
                {{burger_name}}
                <hr>

                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <div class="col-md-4 container" id="form">
            <h5>Add a Burger</h5>
            <form class="create-form">

                <div class="form-group">
                    <label for="brgr">Burger Name:</label>
                    <input type="text" id="brgr" name="name">
                    <button type="submit">Add</button>
                </div>

            </form>
        </div>


        <div class="col-md-4 container" id="eaten">
            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{this.burger_name}}
                <button class="delete" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span>Delete!</span></button>
                <hr>

                {{/if}}
                {{/each}}
            </ul>

        </div>

    </div>