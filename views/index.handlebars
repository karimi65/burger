<div class="container">
    <h1>Eat Da Burger!</h1>
    <div class="row">

        <div class="col-md-6 container">
            {{#each burger}}
            {{#if devoured}}
            <ul>
                <li>{{this.burger_name}}
                    <button class="delete" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span>X</span></button>
                    <hr>
                </li>
            </ul>


            {{else}}
            <ul>
                <li>
                    {{burger_name}}
                    <button class="newBurger" id="{{id}}">Devour it!</button>
                    <hr>
                </li>
            </ul>
            {{/if}}
            {{/each}}

        </div>

        <h3>Add a Burger</h3>
        <form class="create-form">

            <div class="form-group">
                <label for="brgr">Burger Name:</label>
                <input type="text" id="brgr" name="name">
            </div>

            <button type="submit">Add</button>
        </form>
    </div>