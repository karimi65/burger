<div class="container">
    <div class="row">

        <div class="col-md-6 container">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span>{{this.id}} - {{this.burger_name}}</span>
                <button type="button" class="newBurger" data-id="{{this.id}}"
                    data-newDevoured="{{this.devoured}}"><span>Devour it!</span></button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 container">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span> {{this.id}} - {{this.burger_name}} </span>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="brgr">Burger Name:</label>
            <input type="text" id="brgr" name="name">
        </div>

        <button type="submit">Add</button>
    </form>
</div>